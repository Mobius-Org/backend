extends email

block content
    // Email Subject
    table(role='presentation' align='left' width='100%')
        tr
            td(style='padding: 15px 30px 0px 30px; text-align: center;')
                h1 Password Changed Successfully
    // Email Body
    table(role='presentation' align='left' width='100%')
        tr
            td(style='padding: 0 30px 15px 30px;')
                img(src='https://res.cloudinary.com/mobius-kids-org/image/upload/v1651748529/email%20attachments/password-reset-success.gif' alt='Padlock icon in shield' width='100%')
                p
                    | Your Mobius account password has been successfully changed.
                p
                    | If you didn't request this, reach out to us at 
                    a(href="mailto:mobiuskidsorg@gmail.com" style="color: #00B7AB") mobiuskidsorg@gmail.com 
                p
                    | Thanks, 
                    br
                    span(style='font-weight:bold; margin-top: 1em;') Mobius
