extends email

block content
    // Email Subject
    table(role='presentation' align='left' width='100%')
        tr
            td(style='padding: 15px 30px 0px 30px; text-align: center;')
                h1 You're In! Welcome to #{courseName}
    // Email Body
    table(role='presentation' align='left' width='100%')
        tr
            td(style='padding: 0 30px 15px 30px;')
                img(src='cid:welcome-go' alt='Bear looking at password' width='100%')
                p
                    | You've successfully enrolled for #{courseName}. Get ready to embark on an amazing and continuous learning experience journey.
                a(style='background-color: #00B7AB; display: inline-block; color: #FFFFFF; padding: 14px 25px; border-radius: 10px; text-align: center; text-decoration: none' href=courseLink) Start Learning
                p
                    | Let's Go!, 
                    br
                    span(style='font-weight:bold; margin-top: 1em;') Mobius
    // Footer
    table(role='presentation' align='left' style='border-top: 1px solid' width='100%')
        tr
            td(style='padding: 30px;')
                p Mobius Organization
            td(style='padding: 30px;')
                p Support: mobiuskidsorg@gmail.com
