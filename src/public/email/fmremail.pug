doctype transitional
html
  head
    title #{title}
    meta(http–equiv='Content-Type' content='text/html; charset=UTF-8')
    meta(http–equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')

  body(style='margin:0px; padding: 0; width: 100%; height:100%; box-sizing: border-box; font-size: 16px;')
    table(align='center' border='0' cellspacing='20%' cellpadding='5px' width='100%')
      thead
        tr
          th(align='center' valign='top' style='font-size: 20px; color: #F80') Mobius Org!
      block content
      tfoot
        tr
          td(align='center' valign='bottom' style='color: #F80') Mobius Org! &copy;
